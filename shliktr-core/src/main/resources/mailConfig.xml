<?xml version="1.0" encoding="UTF-8"?>
<!-- VERSION = $Id$ -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="messageFactory"
	      class="org.lastbubble.shliktr.mail.MessageFactoryImpl" />

	<bean id="mailSender"
	      class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<description>
			This bean expects to be configured through the mail.properties file,
			with the PropertyOverrideConfigurer above.
		</description>
	</bean>

	<bean id="poolMailer"
	      class="org.lastbubble.shliktr.mail.javamail.PoolMailerImpl"
	      p:messageFactory-ref="messageFactory"
	      p:mailSender-ref="mailSender" />

</beans>
